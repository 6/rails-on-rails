#login-signup
  #social-login.full-width.no-top= link_to 'Login with Facebook', auth_at_provider_path(:provider => :facebook), :class => 'btn btn-large btn-facebook'
  = form_tag sessions_path do
    .field= text_field_tag :email, params[:email], :placeholder => "Email"
    .field= password_field_tag :password, nil, :placeholder => "Password"
    .field
      %label.checkbox
        = check_box_tag :remember_me, 1, params[:remember_me], :checked => "checked"
        Remember me
    = submit_tag "Login", :class => 'btn btn-large'
