!!! 5
- title = @page_title ? "#{@page_title} - #{t :app}" : "#{t :app} - #{t :description_short}"
%html{:lang => @locale, :data => {:debug => @debug,
    :controller => controller_name,
    :action => action_name}}
  %head
    %meta{:charset => 'utf-8'}
    %title= title
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    %meta{:name => "description", :content => t(:description_long, :app => t(:app))}
    = csrf_meta_tags
    = yield :extra_head
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{:data => {:toggle => "collapse", :target => ".nav-collapse"}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Rails on Rails", root_path, :class => "brand"
          .nav-collapse
            %ul.nav
              %li{:class => current_page?(root_path) ? "active" : ""}= link_to "Home", root_path
              - if current_user
                %li
                  %a= "Logged in as #{current_user.email}"
                %li= link_to "Logout", logout_path
              - else
                %li{:class => current_page?(signup_path) ? "active" : ""}= link_to "Sign up", signup_path
                %li{:class => current_page?(login_path) ? "active" : ""}= link_to "Login", login_path
                %li= link_to 'Login with Facebook', auth_at_provider_path(:provider => :facebook)
    .container
      - flash.each do |name, msg|
        = content_tag :div, msg, :class => "alert flash_#{name}"
      = yield
