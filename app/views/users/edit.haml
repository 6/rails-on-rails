= form_for @user do |f|
  %fieldset
    %legend Edit account information
    .fields
      .field= f.text_field :full_name, :value => @user.full_name, :placeholder => "Full name"
      .field= f.text_field :email, :value => @user.email, :placeholder => "Email"
    = f.submit 'Save settings', :class => 'btn'

- if @user.has_password?
  = form_for @user do |f|
    %fieldset
      %legend Change password
      .fields= f.password_field :password, :placeholder => "New password"
      .hide= f.text_field :updating_password, :value => "1"
      = f.submit 'Save password', :class => 'btn'
